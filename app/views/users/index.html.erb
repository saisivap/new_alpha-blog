<h1 align="center">Users in Aplhablog</h1>


    <%= @user.each do |u| %>
  <div class="row" >
    <div class="col-md-4 col-md-offset-4 " style="background-color: #DADADA ">
      <ol style="list-style: none">
        <li>Username: <%= link_to u.username,user_path(u) %></li>
        <li>Email: <%= u.email %></li>
        <li>    <%= pluralize(u.articles.count,"article")  %></li>
        <% if logged_in? and current_user.admin? %>
          <li><%=link_to "Delete this user",user_path(u),method: :delete ,
                 data: {confirm: "Are you sure you want to delete the user and all their articles ...?"}%></li>
        <%end %>
      </ol>
    </div>
  </div><br/>
<% end %>




